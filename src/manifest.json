{
  "manifest_version": 2,
  "name": "__MSG_extNameTB__",
  "description": "__MSG_extDesc__",
  "version": "7.1",
  "author": "AE Creations",
  "homepage_url": "https://aecreations.io/clippings/index.php",
  "browser_specific_settings": {
    "gecko": {
      "id": "clippings-tb@aecreations.github.io",
      "strict_min_version": "140.0"
    }
  },
  
  "icons": {
    "16": "img/clippings-tb16.svg",
    "32": "img/clippings-tb32.svg",
    "48": "icon.svg"
  },

  "permissions": [
    "alarms",
    "compose",
    "downloads",
    "menus",
    "notifications",
    "storage",
    "unlimitedStorage"
  ],

  "optional_permissions": [
    "clipboardRead",
    "nativeMessaging"
  ],

  "background": {
    "scripts": [
      "lib/dexie/dexie.min.js",
      "lib/moment/moment.min.js",
      "lib/moment/locales.min.js",
      "scripts/aeConst.js",
      "scripts/aeDateDiff.js",
      "scripts/aeImportExport.js",
      "scripts/aePrefs.js",
      "scripts/aeWndPos.js",
      "scripts/aeVersionCmp.js",
      "scripts/aeUUID.js",
      "scripts/aeClippings.js",
      "scripts/aeClippingSubst.js",
      "scripts/aeCompress.js",
      "scripts/aeVisual.js",
      "background.js"
    ]
  },

  "compose_action": {
    "type": "button",
    "default_label": "",
    "default_title": "__MSG_browserActionTitle__",
    "default_icon": {
      "16": "img/clippings-tb16.svg"
    },
    "default_area": "maintoolbar"
  },

  "commands" : {
    "ae-clippings-paste-clipping": {
      "suggested_key": {
        "default": "Alt+Shift+Y",
        "mac": "Alt+Command+V"
      },
      "description": "__MSG_cmdDesc__"
    }
  },

  "options_ui": {
    "page": "pages/options.html",
    "open_in_tab": true,
    "browser_style": true
  },
  
  "default_locale": "en"
}
