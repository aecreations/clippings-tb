{
  "manifest_version": 2,
  "name": "__MSG_extNameTB__",
  "description": "__MSG_extDesc__",
  "version": "6.0.2",
  "author": "AE Creations",
  "homepage_url": "https://aecreations.sourceforge.io/clippings/index.php",

  "browser_specific_settings": {
    "gecko": {
      "id": "clippings-tb@aecreations.github.io",
      "strict_min_version": "78.0",
      "strict_max_version": "78.*",
      "update_url": "https://aecreations.github.io/updates/update.json"
    }
  },
  
  "icons": {
    "32": "icon.svg"
  },

  "permissions": [
    "downloads",
    "nativeMessaging",
    "notifications",
    "storage",
    "unlimitedStorage"
  ],

  "background": {
    "scripts": [
      "lib/dexie/dexie.min.js",
      "lib/jquery.js",
      "scripts/aeConst.js",
      "scripts/aeListeners.js",
      "scripts/aeDateDiff.js",
      "scripts/aeImportExport.js",
      "scripts/aePrefs.js",
      "background.js"
    ]
  },

  "options_ui": {
    "page": "pages/options.html",
    "open_in_tab": true,
    "browser_style": true
  },
  
  "experiment_apis": {
    "WindowListener": {
      "schema": "api/WindowListener/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["WindowListener"]],
        "script": "api/WindowListener/implementation.js"
      }
    },
    "aeClippingsLegacy": {
      "schema": "api/aeClippingsLegacy/schema.json",
      "parent": {
	"scopes": ["addon_parent"],
        "paths": [["aeClippingsLegacy"]],
        "script": "api/aeClippingsLegacy/implementation.js"
      }
    }
  },

  "default_locale": "en"
}
